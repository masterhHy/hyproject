<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://code.alibabatech.com/schema/dubbo
        http://code.alibabatech.com/schema/dubbo/dubbo.xsd ">


    <dubbo:application name="user-service"/>
    <!-- 消息中心注册 -->
    <dubbo:registry address="${dubbo.registry.address}"/>
    <!-- 暴露服务 -->
	<dubbo:protocol name="dubbo" port="${dubbo.protocol.port}" ></dubbo:protocol>
    
    
    <dubbo:service interface="com.hao.user.service.UserService"  
        ref="userServiceImpl" retries="0" timeout="6000" />  
    <dubbo:service interface="com.hao.user.service.RoleService"  
        ref="roleServiceImpl" retries="0" timeout="6000" />  
    <dubbo:service interface="com.hao.user.service.ResourceService"  
        ref="resourceServiceImpl" retries="0" timeout="6000" />  



</beans>